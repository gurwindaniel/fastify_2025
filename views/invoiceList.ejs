<%- include('./partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <h3 class="mb-0"><i class="bi bi-file-earmark-text"></i> Invoices & Sales</h3>
        </div>
        <div class="card-body">

          <div class="mb-3">
            <a href="/invoice" class="btn btn-primary">Create New Invoice</a>
          </div>

          <% if (rows && rows.length) { %>
            <div class="table-responsive">
              <table class="table table-hover table-striped">
                <thead class="table-light">
                  <tr>
                    <th>Invoice ID</th>
                    <th>Invoice Date</th>
                    <th>Customer Address</th>
                    <th>Sale ID</th>
                    <th>Product</th>
                    <th>Vendor Address</th>
                    <th>Quantity</th>
                    <th>Amount (₹)</th>
                  </tr>
                </thead>
                <tbody>
                  <% rows.forEach(r => { %>
                    <tr>
                      <td><%= r.invoice_id %></td>
                      <td><small class="text-muted"><%= new Date(r.invoice_date).toLocaleString() %></small></td>
                      <td><%= r.customer_address %></td>
                      <td><%= r.sale_id %></td>
                      <td><%= r.product_name %></td>
                      <td><%= r.vendor_address || '-' %></td>
                      <td class="text-end"><%= r.sale_quantity %></td>
                      <td class="text-end">₹ <%= parseFloat(r.sale_amount).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-info">No invoices found. Create one to get started.</div>
          <% } %>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
