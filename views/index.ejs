<%- include('./partials/header') %>

<h1>Inventory Items</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(item => { %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.quantity %></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('./partials/footer') %>
