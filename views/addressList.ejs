<%- include('./partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <h3 class="mb-0">
            <i class="bi bi-list-check"></i> My Addresses
          </h3>
        </div>

        <div class="card-body">
          <!-- Buttons -->
          <div class="mb-3">
            <a href="/address" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> Add New Address
            </a>
            <a href="/items" class="btn btn-secondary">
              <i class="bi bi-arrow-left"></i> Back to Items
            </a>
          </div>

          <!-- Addresses Table -->
          <% if (typeof addresses !== 'undefined' && addresses.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover table-striped">
                <thead class="table-light">
                  <tr>
                    <th><i class="bi bi-hash"></i> ID</th>
                    <th><i class="bi bi-house-door"></i> Address Name</th>
                    <th><i class="bi bi-person-badge"></i> Type</th>
                    <th><i class="bi bi-map"></i> Location</th>
                    <th><i class="bi bi-mailbox"></i> Pincode</th>
                    <th><i class="bi bi-calendar-event"></i> Date Created</th>
                  </tr>
                </thead>
                <tbody>
                  <% addresses.forEach(addr => { %>
                    <tr>
                      <td><span class="badge bg-secondary"><%= addr.address_id %></span></td>
                      <td><strong><%= addr.address_name %></strong></td>
                      <td>
                        <span class="badge bg-<%= addr.person_type === 'Customer' ? 'success' : 'warning' %>">
                          <%= addr.person_type %>
                        </span>
                      </td>
                      <td><small><%= addr.locations %></small></td>
                      <td><%= addr.pincode %></td>
                      <td><small class="text-muted"><%= new Date(addr.address_date).toLocaleDateString() %></small></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-info" role="alert">
              <i class="bi bi-info-circle"></i> No addresses found. 
              <a href="/address" class="alert-link">Create one now!</a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.0/bootstrap-icons.min.css">

<%- include('./partials/footer') %>
